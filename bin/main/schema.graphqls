schema {
    query: Query,
}

type Query {
  bookById(id: ID): Book
}

type Mutation {
  createBook(name: String!, pageCount: Int!, genre: Genre!): Book
}

enum Genre {
  HISTORY
  DRAMA
  THRILLER
}

type Book {
  id: ID
  name: String
  pageCount: Int
  genre: Genre
  author: Author
}

type Author {
  id: ID
  firstName: String
  lastName: String
}

